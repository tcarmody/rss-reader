{
  "name": "datapoints-ai-rss-reader",
  "productName": "Data Points AI RSS Reader",
  "version": "1.0.0",
  "description": "Sophisticated AI-powered RSS reader with article clustering and summarization",
  "main": "main.js",
  "author": "Data Points AI",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder --mac",
    "build:universal": "electron-builder --mac --universal",
    "build:arm64": "electron-builder --mac --arm64",
    "build:x64": "electron-builder --mac --x64",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "ai.datapoints.rss-reader",
    "productName": "Data Points AI RSS Reader",
    "copyright": "Copyright Â© 2024 Data Points AI",
    "mac": {
      "category": "public.app-category.news",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal", "arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["universal", "arm64", "x64"]
        }
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "minimumSystemVersion": "10.13.0",
      "type": "distribution"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "backgroundColor": "#ffffff",
      "icon": "assets/icon.icns",
      "iconSize": 128,
      "title": "Install Data Points AI RSS Reader"
    },
    "files": [
      "**/*",
      "!**/{.DS_Store,.git,.gitignore,.vscode,docs,test,tests,__pycache__}",
      "!*.md",
      "../requirements.txt",
      "../essential_requirements.txt",
      "../rss_feeds.txt",
      "../server.py",
      "../main.py",
      "../compat.py",
      "../*.py",
      "../api/**/*",
      "../cache/**/*",
      "../clustering/**/*",
      "../common/**/*",
      "../content/**/*",
      "../models/**/*",
      "../reader/**/*",
      "../services/**/*",
      "../summarization/**/*",
      "../templates/**/*",
      "../static/**/*",
      "!../tests/**/*",
      "!../**/__pycache__/**/*",
      "!../.git/**/*"
    ],
    "extraResources": [
      {
        "from": "../requirements.txt",
        "to": "app/requirements.txt"
      },
      {
        "from": "../essential_requirements.txt",
        "to": "app/essential_requirements.txt"
      },
      {
        "from": "../rss_feeds.txt",
        "to": "app/rss_feeds.txt"
      },
      {
        "from": "..",
        "to": "app",
        "filter": [
          "**/*.py",
          "api/**/*",
          "cache/**/*",
          "clustering/**/*",
          "common/**/*",
          "content/**/*",
          "models/**/*",
          "reader/**/*",
          "services/**/*",
          "summarization/**/*",
          "templates/**/*",
          "static/**/*",
          "!tests/**/*",
          "!**/__pycache__/**/*",
          "!.git/**/*",
          "!*.pyc",
          "!.env"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "compression": "maximum",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
